<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.manimozhisadasivam.sqlite.activities.sharing"
    tools:showIn="@layout/activity_sharing"
    android:background="@drawable/use1">

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="407dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:text="RATE YOUR EXPERIECE!!"
        android:textSize="24sp"
        android:layout_above="@+id/ratingBar2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="SHARE YOUR EXPERIENCE ABOUT YOUR TRIP HEE!!!"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="WRITE YOUR EXPERIENCE HERE...."
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />
</RelativeLayout>
